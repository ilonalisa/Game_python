import time
import sys  # Додали імпорт модуля sys

score = 0
inventory = []

# Функція для виведення введеного тексту з паузою
def print_with_pause(text):
    print(text)
    time.sleep(1)

# Початок гри
print_with_pause("Ласкаво просимо!")
player_name = input("Будь ласка, введіть своє ім'я: ")
print(f"{player_name}, ви опинились у закинутій лікарні.")
print("Ваше завдання - знайти вихід, не потрапивши на Антона. Вам потрібно приймати рішення, щоб досягти цілі.")

while True:
    choice = input("Виберіть, куди йти (ліворуч/праворуч): ")
    if choice == "ліворуч":
        print("Ви пішли ліворуч і побачили, як Антон бігає за Андрієм, щоб вкрасти цукерки. Вам було страшно, і ви повернулись назад.")
    elif choice == "праворуч":
        print("Ви побачили Марічку, яка просить допомоги.")
        choice = input("Виберіть, що зробити: взяти Марічку з собою або залишити Марічку: ")
        if choice == "взяти Марічку з собою":
            print("Ви взяли Марічку і вона вас вбила.")
            sys.exit()  # Завершує гру
        elif choice == "залишити Марічку":
            print("Ви вижили.")
            sys.exit()  # Завершує гру

print("Якщо ви вибрали правильну відповідь і залишились живими, ви продовжуєте гру.")
print("Ви потрапили у коридор і вам потрібно знайти сходи, щоб спуститись на перший поверх.")

choice = input("Виберіть, куди йти (ліворуч/вперед): ")
if choice == "ліворуч":
    print("Ви потрапили в кімнату Антона.")
    choice = input("Виберіть, куди йти (вперед): ")
    if choice == "вперед":
        print("Ви побачили сходинки і спустились.")
        print("Вам потрібно знайти вихід.")

        choice = input("Виберіть 1 або 2: ")
        if choice == "1":
            print("Ви знайшли вихід і втекли. Ви виграли!")
            sys.exit()  # Завершує гру
        elif choice == "2":
            print("Вас спіймав Антон і з'їв, тому що подумав, що ви цукерка. Гра закінчена!")
            sys.exit()  # Завершує гру
